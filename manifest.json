{
  "manifest_version": 3,
  "name": "Amazon URL Formatter",
  "version": "1.0",
  "description": "AmazonのURLをシンプルにフォーマットしてクリップボードにコピーします",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.amazon.co.jp/*", "*://*.amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon URL Formatter"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}